<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="./css/home.css" />
  </head>
  <body>
    <div class="container">
      <div class="left-flexbox">
        <div class="code-input box">
          <form class="code-input-form">
            <div class="chat-bubble-flex">
              <img src="./images/speech_bubble.png" alt="" />
              <div>Start new chat</div>
            </div>
            <div class="code-submit-dropdown">
              <!-- chat-code-input below can likely be deleted -->
              <input
                class="pasted-code-input chat-code-input"
                type="text"
                name="room"
              />
              <button class="pasted-code-button">submit</button>
            </div>
          </form>
        </div>
        <div class="user-info box">
          <div class="user-details">
            <div class="name">
              <div class="user-image-container">
                <img src="./images/1.jpg" alt="" class="" />
              </div>
              <div class="user-name-flex">
                <img class="user-icon" src="./images/person_icon.png" alt="" />
                <div class="users-name" id=" <%= loggedInUser[0].id %>">
                  <%= loggedInUser[0].username %>
                </div>
              </div>
              <div class="user-email-flex">
                <img class="envelope" src="./images/envelope.png" alt="" />
                <div class="email"><%= loggedInUser[0].email %></div>
              </div>
              <div class="logout"><a href="/logout">Logout</a></div>
            </div>
          </div>
        </div>
        <div class="active-chats">
          <div>Contacts</div>
          <!-- unique to user -->
          <% contactInfo.forEach(contact => { %>
          <div
            class="hidden-roomId <%= contact.email %>"
            id=" <%= contact.room_id %> "
          >
            <%= contact.username %>
          </div>
          <%}) %>
        </div>
        <div class="logo-image box"></div>
      </div>

      <div class="center-flexbox box">
        <div class="chat-window">
          <% messages.forEach(message => { %>
          <div class="message">
            <p class="message-username">
              <%= message.username %><button id="close"></button>
            </p>
            <p class="message-text"><%= message.message %></p>
            <p class="message-time"><%= message.date %></p>
          </div>
          <% }) %>
          <!-- populates based on conversation selected -->
        </div>

        <form class="chat-input">
          <input type="text" name="text" class="message-input" />
          <button type="submit" class="message-submit-button">Send</button>
        </form>
      </div>
      <div class="right-flexbox">
        <div class="contact-info box">
          <div class="contact-details">
            <div class="contact-image-container">
              <img src="<%= %> " alt="" class="" />
            </div>
            <div class="contact-name-flex">
              <img class="user-icon" src="./images/person_icon.png" alt="" />
              <div class="contact-name"></div>
            </div>
            <div class="contact-email-flex">
              <img class="envelope" src="./images/envelope.png" alt="" />
              <div class="contact-email"></div>
            </div>
          </div>
        </div>

        <div class="sideboard-right-bottom box">
          <div class="invite">
            <form>
              <div class="copy-code">
                <div class="copy-code-headline">Copy invite code</div>
                <button class="invite-button">
                  <img src="./images/link_white.png" alt="" />
                </button>
                <p>Share this code to create a new group chat</p>
                <img src="./images/paper_airplane.png" alt="" />
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.10.3/qs.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="./js/home.js"></script>
  </body>
</html>
